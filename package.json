{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "components:lit:watch": "lerna run build:lit:watch --scope=components",
    "components:storybook": "lerna run storybook --scope=components",
    "react": "npm-run-all -p \"components:lit:watch\" \"components:storybook\" \"react:start\" \"react:codegen\" \"server\"",
    "react:start": "lerna run start --scope=react-app",
    "react:codegen": "lerna run codegen:watch --scope=react-app",
    "server": "npm-run-all -p \"server:rest\" \"server:graphql\"",
    "server:rest": "lerna run start --scope=rest-server",
    "server:graphql": "lerna run start --scope=graphql-server"
  },
  "devDependencies": {
    "lerna": "^5.5.2",
    "npm-run-all": "^4.1.5"
  }
}
